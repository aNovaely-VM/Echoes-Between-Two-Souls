{
  "name": "echoes-between-two-souls",
  "version": "0.1.0",
  "description": "A 2D cooperative platformer - Two souls, one journey",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite --mode electron",
    "build": "tsc && vite build",
    "build:electron": "vite build --mode electron && electron-builder",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "pixi.js": "^8.6.6",
    "howler": "^2.2.4"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "@types/node": "^22.12.0",
    "@types/howler": "^2.2.12"
  },
  "build": {
    "appId": "com.echoes.betweentwosouls",
    "productName": "Echoes Between Two Souls",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
